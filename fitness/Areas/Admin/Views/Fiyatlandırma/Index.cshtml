@model IEnumerable<fitness.Models.Users>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}






<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Baslangic)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Profosyonel)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Premium)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PremiumFiyat)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BaslangicFiyat)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ProfosyonelFiyat)
        </th>

    </tr>
</table>



@foreach (var item in Model)
{
<tr>
    <th>
        @Html.DisplayNameFor(model => model.Baslangic)
    </th>
    <th>
        @Html.DisplayNameFor(model => model.Profosyonel)
    </th>
    <th>
        @Html.DisplayNameFor(model => model.Premium)
    </th>
    <th>
        @Html.DisplayNameFor(model => model.PremiumFiyat)
    </th>
    <th>
        @Html.DisplayNameFor(model => model.BaslangicFiyat)
    </th>
    <th>
        @Html.DisplayNameFor(model => model.ProfosyonelFiyat)
    </th>

    <td>
        @Html.ActionLink("Create", "Create", new { id = item.id }) |
        @Html.ActionLink("Delete", "Delete", new { id = item.id })
    </td>
</tr>
}

