
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Admin Sayfanıza Hoşgeldiniz</h2>






@model fitness.Models.Contact

    {
        viewbag.title = "contact";
    }

<div class="about_section_2 layout_padding">
    <div class="container">
        <h1 class="contact_text_2"><strong>bize ulaşın</strong></h1>
        <p class="client_long_text">ekip arkadaşlarımızla iletişime geçmek için buradayız! her türlü sorunuz ve talebiniz için aşağıdaki anketi doldurursanız, sizinle hemen iletişim kuracağız.</p>
    </div>
</div>
<div class="contact_section" style="background-color:midnightblue;">
    <div class="row">
        <div class="col-md-6 background_bg">
            <div class="contact_bg">
                <div class="input_main">
                    <div class="container">
                        <h2 class="request_text">sizinle iletişime geçmemiz için lütfen formu doldurun!</h2>
                        <form action="/contact/contact">
                            <div class="form-group">
                                <input type="text" class="email-bt" placeholder=" @Html.DisplayNameFor(model => model.title)" name="ad">
                            </div>
                            <div class="form-group">
                                <input type="text" class="email-bt" placeholder=" @Html.DisplayNameFor(model => model.email)" name="eposta">
                            </div>
                            <div class="form-group">
                                <input type="text" class="email-bt" placeholder=" @Html.DisplayNameFor(model => model.phone)" name="telefon">
                            </div>
                            <form action="/action_page.php">
                                <div class="form-group">
                                    <textarea class="massage-bt" placeholder=" @Html.DisplayNameFor(model => model.contactmessagetext)" rows="5" id="comment" name="text"></textarea>
                                </div>
                            </form>
                        </form>
                    </div>
                </div>
                <div class="send_bt"><a href="#">gönder</a></div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="map-responsive">
                <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3190.664936704944!2d30.63076247576891!3d36.89836316216018!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x14c391ee4201990f%3a0xba232b8e7ba16d7f!2zu2l0zwxlciwgmtmwny4gu2suıdezıeısıda3mdcwıejhahteswzessblw7z5w7wgs8o2eco8l0tvbnlhywx0xlevqw50ywx5yq!5e0!3m2!1str!2str!4v1708733354537!5m2!1str!2str" width="600" height="580" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
            </div>
        </div>


    </div>
</div>*@



