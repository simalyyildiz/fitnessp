@using fitness.Areas.Admin.Controllers
@model fitness.Areas.Admin.Controllers.InvoiceController.InvoiceModel

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="payment-container" style="font-family: 'Arial', sans-serif; display: flex; align-items: center; justify-content: center; height: 80vh; margin: 0; background-color: #f5f5f5;">
    <div class="card" style="background-color:lightblue; padding: 20px; border-radius: 10px; box-shadow: 0 0 10px rgba(0, 0, 0, 0.1); width: 400px;">
        <h3>Ödeme Bilgileri</h3>
        <label for="bank-name" style="display: block; margin-bottom: 8px; font-weight: bold; color: #333;">Banka Adı:</label>
        <input type="text" id="bank-name" name="BankName" placeholder="Banka Adı" style="width: 100%; padding: 10px; margin-bottom: 16px; box-sizing: border-box; border: 1px solid #ccc; border-radius: 4px;">

        <b>@Model.BankName</b>

        <label for="card-number" style="display: block; margin-bottom: 8px; font-weight: bold; color: #333;">Kart Numarası:</label>
        <input type="text" id="card-number" name="CardNumber" placeholder="1234 5678 9012 3456" style="width: 100%; padding: 10px; margin-bottom: 16px; box-sizing: border-box; border: 1px solid #ccc; border-radius: 4px;">

        <b>@Model.CardNumber</b>

        <label for="expiry-date" style="display: block; margin-bottom: 8px; font-weight: bold; color: #333;">Son Kullanma Tarihi:</label>
        <input type="text" id="expiry-date" name="ExpiryDate" placeholder="MM/YY" style="width: 100%; padding: 10px; margin-bottom: 16px; box-sizing: border-box; border: 1px solid #ccc; border-radius: 4px;">

        <b>@Model.ExpiryDate</b>

        <label for="cvv" style="display: block; margin-bottom: 8px; font-weight: bold; color: #333;">CVV:</label>
        <input type="text" id="cvv" name="CVV" placeholder="123" style="width: 100%; padding: 10px; margin-bottom: 16px; box-sizing: border-box; border: 1px solid #ccc; border-radius: 4px;">

        <b>@Model.CVV</b>

        <!-- Redirect to InvoiceController's Pay method when submitting -->
        <form method="post" asp-action="Pay" style="margin-top: 20px;">
            <button class="pay-button" id="payment-btn" style="background-color: #4caf50; color: white; padding: 12px 20px; border: none; border-radius: 4px; cursor: pointer; font-size: 16px;">Ödemeyi Tamamla</button>
        </form>

    </div>
</div>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>

