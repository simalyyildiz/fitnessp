@model fitness.Models.Users

<div style="width:600px; margin-left:2rem;">
    <div class="form-group" style="margin-top:2rem;">
        <br />
        <label style="margin-top:2rem;" for="name">  @Html.DisplayNameFor(model => model.FullName) </label> <br />
        <input type="text" id="name" name="name" style="width: 100%; padding: 8px; box-sizing: border-box; border: 1px solid #ccc; border-radius: 4px;"> <br />
    </div>

    <div class="form-group">
        <label for="email">  @Html.DisplayNameFor(model => model.Email)</label>
        <input type="email" id="email" name="email" style="width: 100%; padding: 8px; box-sizing: border-box; border: 1px solid #ccc; border-radius: 4px;">
    </div>

    <div class="form-group">
        <label for="telefon">  @Html.DisplayNameFor(model => model.Phone)</label>
        <input type="tel" id="telefon" name="telefon" style="width: 100%; padding: 8px; box-sizing: border-box; border: 1px solid #ccc; border-radius: 4px;">
    </div>
</div>
<button onclick="saveData()" style="background-color: #4caf50;margin-left:12rem;margin-bottom:2rem; width:15rem; color: white; padding: 10px 15px; border: none; border-radius: 4px; cursor: pointer; font-size: 16px;" onmouseover="this.style.backgroundColor='#45a049'" onmouseout="this.style.backgroundColor='#4caf50'">Giriş yap</button>

<script>
    function saveData() {
        var name = document.getElementById("name").value;
        var email = document.getElementById("email").value;
        var telefon = document.getElementById("telefon").value;

        // AJAX ile bilgileri kontrol etmek ve kaydetmek için bir istek gönderin
        $.ajax({
            url: '/Home/Kullanici',
            type: 'POST',
            data: { fullname: name, email: email, phone: telefon },
            success: function (response) {
                // Başarılı bir şekilde kaydedildiğinde yapılacak işlemler
                window.location.href = '/Home/Giris'; // Giriş sayfasına yönlendirme
            },
            error: function (xhr, status, error) {
                // Hata durumunda yapılacak işlemler
                console.error(error); // Hata konsola yazdırılır
                alert('Bir hata oluştu. Lütfen tekrar deneyin.'); // Kullanıcıya hata mesajı gösterilir
            }
        });

    }
</script>
